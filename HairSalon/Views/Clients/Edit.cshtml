@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit</h2>

<h4>Edit this client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  <input type="text" id="Name" name="Name" value="@Model.Name" required>


  @Html.LabelFor(model => model.Email)
  <input type="text" id="Email" name="Email" value="@Model.Email" required>

  @Html.LabelFor(model => model.Phone)
  <input type="text" id="Phone" name="Phone" value="@Model.Phone" required>


  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownListFor(model => model.StylistId, (SelectList)ViewBag.StylistId)
  @Html.ValidationMessageFor(model => model.StylistId)

  <input type="submit" value="Save" class="btn btn-primary btn-sm" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>