@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <p>No clients yet!</p>
}
else
{
  <ul>
    @foreach (Client client in Model)
    { 
      <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId}) | @(client.Stylist) != null ? @client.Stylist.Name : "No stylist assigned"</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>