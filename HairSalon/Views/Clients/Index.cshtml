@{
    Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Client List</h1>
<br />
@if (Model.Count == 0)
{
    <p>No clients yet!</p>
}
else
{
    <ul class="list-group">
        @foreach (Client client in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    @Html.ActionLink(client.Name, "Details", new { id = client.ClientId }, new { @class = "text-decoration-none" })
                </div>
                <div>
                    <span class="badge bg-secondary">Stylist: @(client.Stylist != null ? client.Stylist.Name : "No stylist assigned")</span>
                </div>
            </li>
        }
    </ul>
}

<div class="my-3">
    <p>@Html.ActionLink("Add new Client", "Create", "Clients", null, new { @class = "btn btn-primary" })</p>
    <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-secondary" })</p>
</div>
