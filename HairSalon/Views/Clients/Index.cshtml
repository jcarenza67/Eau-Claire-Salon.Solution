@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylist Search</h1>

<form method="get" action="@Url.Action("Index")">
    <div class="input-group mb-3">
        <input type="text" name="search" class="form-control" placeholder="Search stylists...">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (@Model.Count == 0)
{
  <p>No clients yet!</p>
}
else
{
  <ul>
    @foreach (Client client in Model)
    { 
      <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId}) | @(client.Stylist != null ? @client.Stylist.Name : "No stylist assigned")</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>