@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container">
    <h2 class="display-4 mb-4">Are you sure you want to delete this client?</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>@Html.DisplayNameFor(model => model.Name): <span class="text-muted">@Html.DisplayFor(model => model.Name)</span></h3>
        </div>
    </div>

    <div class="text-center mt-4">
        @using (Html.BeginForm())
        {
            <input type="submit" value="Delete" class="btn btn-danger">
        }
        <br />
        @Html.ActionLink("Back to client list", "Clients", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>