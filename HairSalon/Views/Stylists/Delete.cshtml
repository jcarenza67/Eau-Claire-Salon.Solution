@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="container">
    <h2 class="display-4 mb-4">Are you sure you want to delete this stylist?</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
        </div>
    </div>

    <div class="text-center mt-4">
        @using (Html.BeginForm())
        {
            <input type="submit" value="Delete" class="btn btn-danger btn-lg">
        }
        <br />
        @Html.ActionLink("Back to stylist list", "Index", "Stylists", null, new { @class = "btn btn-primary btn-lg" })
    </div>
</div>