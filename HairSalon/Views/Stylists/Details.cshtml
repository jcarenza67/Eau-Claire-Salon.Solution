@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<div class="container">
    <h2 class="display-4 mb-4">Stylist Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h3>@Html.DisplayNameFor(model => model.Name): <span class="text-bold">@Html.DisplayFor(model => model.Name)</span></h3>
            <h3>@Html.DisplayNameFor(model => model.Phone): <span class="text-bold">@Html.DisplayFor(model => model.Phone)</span></h3>
            <h3>@Html.DisplayNameFor(model => model.Email): <span>@Html.DisplayFor(model => model.Email)</span></h3>
            <h3>@Html.DisplayNameFor(model => model.Specialty): <span class="text-bold">@Html.DisplayFor(model => model.Specialty)</span></h3>
        </div>
    </div>

    @if (@Model.Clients.Count == 0)
    {
        <div class="alert alert-info mt-4">No clients have been added for this stylist yet!</div>
    }
    else
    {
        <h3 class="mt-4">Clients:</h3>
        <ul class="list-group">
            @foreach (Client client in Model.Clients)
            {
                <li class="list-group-item">@Html.ActionLink(client.Name, "Details", "Clients", new { id = client.ClientId }, new { @class = "text-decoration-none" })</li>
            }
        </ul>
    }

    <div class="text-center mt-4">
        <p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
        <p>@Html.ActionLink("Add new Client", "Create", "Clients", null, new { @class = "btn btn-primary btn-lg" })</p>
        <p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
        <p>@Html.ActionLink("Back to Stylists", "Index", "Stylists", null, new { @class = "btn btn-primary btn-lg" })</p>
    </div>
</div>