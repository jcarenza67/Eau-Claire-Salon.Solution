@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="container">
    <h2 class="display-4 mb-4">Add a new Stylist</h2>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone)
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Specialty)
                    @Html.TextBoxFor(model => model.Specialty, new { @class = "form-control", required = "required" })
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-lg">Add a new stylist</button>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <p>@Html.ActionLink("Show All Stylists", "Index", "Stylists", null, new { @class = "btn btn-primary btn-lg" })</p>
    </div>
</div>