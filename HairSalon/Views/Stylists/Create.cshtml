@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{ 
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone, new {required = "required"})
  
  @Html.LabelFor(model => model.Email)
  @Html.TextBoxFor(model => model.Email, new {required = "required"})
  
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, new {required = "required"})
  

  <input type="submit" value="Add a new stylist" class="btn btn-primary btn-sm"  />
}

<p>@Html.ActionLink("Show all stylists", "Index")</p>