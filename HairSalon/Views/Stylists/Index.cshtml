@{
    Layout = "_Layout";
}

@using HairSalon.Models

<div class="container">
    <h1 class="display-4 text-center mb-4">Stylists</h1>

    @if (@Model.Count == 0)
    {
        <div class="alert alert-info">No stylists have been added yet!</div>
    }
    else
    {
        <ul class="list-group">
            @foreach (Stylist stylist in Model)
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>@stylist.Name</span>
                        @Html.ActionLink("View Details", "Details", new { id = stylist.StylistId }, new { @class = "btn btn-primary" })
                    </div>
                </li>
            }
        </ul>
    }
    <br />
    <div>
        <p>@Html.ActionLink("Add new stylist", "Create", null, new { @class = "btn btn-primary" })</p>
        <p>@Html.ActionLink("Add new Client", "Create", "Clients", null, new { @class = "btn btn-primary" })</p>
        <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })</p>
    </div>
</div>